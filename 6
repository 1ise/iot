import httplib2
import urllib
key = "ZRG6DEKAHIXMD4H6"
def thermometer():
    while True:
        temp = int(open('/sys/class/thermal/thermal_zone0/temp').read())
        http=httplib2.Http()
        url="https://api.thingspeak.com/update?api_key=ZRG6DEKAHIXMD4H6&field1=0"
        try:
            response,data = http.request(url,"GET")
            print(temp)
            print(response.status,response.reason)
        except:
            print("connection failed")
            break
if _name_ == "_main_":
    while True:
        thermometer()
